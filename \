#include <limits.h>
#include <stdio.h>
#include "libft.h"

int	len_int_positif(int n)
{
	int	i;

	i = 0;
	if (n == 0)
		return (1);
	while (n)
	{
		n /= 10;
		i++;
	}
	return (i);
}

void str_implement(char *nbr, int n,int len)
{
	char nbr1[100];
	int i;

	while(n)
	{
		nbr[i] = (n % 10) + '0';
		printf("%d",len);
		i++;
		n/=10;
	}
}

char	*ft_itoa(int n)
{
	char	*nbr;
	int		len;
	int	i;
	int	nb;

	if(n < 0)
	{
		len = 1;
		n = - n;
	}
	else
		len = 0;
	len += len_int_positif(n);
	nbr = (char *)malloc((len + 1)*sizeof(char));
	if(!nbr)
		return (NULL);
	if (n < 0)
	{
	 	nbr[0] = '-';
	 	n = -n;
		i = 1;
	}
	i = len;
	str_implement(nbr,n,len);
	//printf("%s",nbr);
	return("");
}

int	main(void)
{
	printf("%s\n",ft_itoa(100));
}
